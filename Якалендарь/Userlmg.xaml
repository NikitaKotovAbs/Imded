<UserControl x:Class="Якалендарь.Userlmg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Якалендарь"
             mc:Ignorable="d" d:DesignWidth="400" Height="160">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="Check" HorizontalAlignment="Center"></CheckBox>
        <Image x:Name="Img" Grid.Column="1"></Image>
        <TextBlock x:Name="name" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
